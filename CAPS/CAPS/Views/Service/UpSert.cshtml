@model CAPS.Models.Service

@{
	ViewData["Title"] = "Create Service";
}

<div class="container my-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="UpSert" method="post" class="mt-3">
        @Html.HiddenFor(m => m.ServiceId)
        @Html.HiddenFor(m => m.DateCreated)
        @Html.HiddenFor(m => m.DateModified)
        @Html.HiddenFor(m => m.isActive)

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Duration" class="form-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Save
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>

        <form asp-action="UpSert" method="post">

  

            <!-- STAFF FIELDS -->
            <h4>Staff Info</h4>
            <input name="Staff.FullName" placeholder="Full Name" />
            <input name="Staff.Gender" placeholder="Gender" />
            <input name="Staff.Expertise" placeholder="Expertise" />
            <input name="Staff.Email" placeholder="Email" />
            <input name="Staff.PhoneNumber" placeholder="Phone" />
            <input name="Staff.DateHired" type="date" placeholder="Date Hired" />

            <button type="submit">Save</button>
        </form>
    </form>
</div>