@model List<CAPS.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-mint fw-bold">@ViewData["Title"]</h2>
        <a asp-action="UpSert" class="btn btn-mint">
            <i class="bi bi-plus-lg me-2"></i>Add New Service
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-list-ul text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">No services available</h4>
            <p class="text-muted">Add your first spa service to get started.</p>
        </div>
    }
    else
    {
        <!-- Service Categories Summary -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-mint mb-3"><i class="bi bi-tags me-2"></i>Service Categories Overview</h6>
                        <div class="row">
                            @{
                                var categories = Model.GroupBy(s => s.Category).ToList();
                                foreach (var category in categories.Take(4))
                                {
                                    <div class="col-md-3 mb-2">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-mint-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                <i class="bi bi-star-fill text-mint"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-mint">@category.Key</div>
                                                <small class="text-muted">@category.Count() services</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover service-table">
                <thead class="table-mint">
                    <tr>
                        <th class="text-white">Service Name</th>
                        <th class="text-white">Category</th>
                        <th class="text-white">Description</th>
                        <th class="text-white text-center">Price</th>
                        <th class="text-white text-center">Duration</th>
                        <th class="text-white text-center">Status</th>
                        <th class="text-white text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="service-row" data-service-id="@item.ServiceId">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="service-icon me-2">
                                        @if (item.Category == "Massage")
                                        {
                                            <i class="bi bi-hand-index text-primary"></i>
                                        }
                                        else if (item.Category == "Facial")
                                        {
                                            <i class="bi bi-emoji-smile text-warning"></i>
                                        }
                                        else if (item.Category == "Body Treatment")
                                        {
                                            <i class="bi bi-droplet text-info"></i>
                                        }
                                        else if (item.Category == "Nail Care")
                                        {
                                            <i class="bi bi-hand-index-thumb text-danger"></i>
                                        }
                                        else if (item.Category == "Hair Treatment")
                                        {
                                            <i class="bi bi-scissors text-secondary"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-heart text-success"></i>
                                        }
                                    </div>
                                    <div>
                                        <div class="fw-bold text-mint">@item.Name</div>
                                        <small class="text-muted">ID: @item.ServiceId</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-mint-light text-mint">@item.Category</span>
                            </td>
                            <td class="text-muted">
                                @if (string.IsNullOrEmpty(item.Description))
                                {
                                    <span class="text-muted fst-italic">No description</span>
                                }
                                else if (item.Description.Length > 60)
                                {
                                    <span title="@item.Description">@item.Description.Substring(0, 60)...</span>
                                }
                                else
                                {
                                    @item.Description
                                }
                            </td>
                            <td class="text-center">
                                <div class="fw-bold text-success">@item.Price.ToString("C")</div>
                                <small class="text-muted">per session</small>
                            </td>
                            <td class="text-center">
                                <div class="badge bg-info text-white">
                                    <i class="bi bi-clock me-1"></i>@item.Duration min
                                </div>
                                @if (item.Duration >= 90)
                                {
                                    <div class="small text-muted mt-1">Extended session</div>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.isActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Inactive
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="UpSert" asp-route-id="@item.ServiceId" class="btn btn-outline-mint btn-sm" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-info btn-sm" title="View Details" 
                                            onclick="showServiceDetails(@item.ServiceId, '@item.Name', '@item.Category', '@item.Description', @item.Price, @item.Duration)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <form asp-action="Delete" asp-route-id="@item.ServiceId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete"
                                                onclick="return confirm('Are you sure you want to delete this service?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Service Details Modal -->
<div class="modal fade" id="serviceDetailsModal" tabindex="-1" aria-labelledby="serviceDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-mint text-white">
                <h5 class="modal-title" id="serviceDetailsModalLabel">
                    <i class="bi bi-info-circle me-2"></i>Service Details
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-mint">Service Information</h6>
                        <p><strong>Name:</strong> <span id="modalServiceName"></span></p>
                        <p><strong>Category:</strong> <span id="modalServiceCategory"></span></p>
                        <p><strong>Duration:</strong> <span id="modalServiceDuration"></span></p>
                        <p><strong>Price:</strong> <span id="modalServicePrice"></span></p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-mint">Description</h6>
                        <p id="modalServiceDescription"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="#" id="modalEditLink" class="btn btn-mint">Edit Service</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showServiceDetails(serviceId, name, category, description, price, duration) {
            document.getElementById('modalServiceName').textContent = name;
            document.getElementById('modalServiceCategory').textContent = category;
            document.getElementById('modalServiceDuration').textContent = duration + ' minutes';
            document.getElementById('modalServicePrice').textContent = '$' + price.toFixed(2);
            document.getElementById('modalServiceDescription').textContent = description || 'No description available';
            document.getElementById('modalEditLink').href = '/Service/UpSert/' + serviceId;
            
            var modal = new bootstrap.Modal(document.getElementById('serviceDetailsModal'));
            modal.show();
        }
    </script>
}

<style>
    .text-mint {
        color: #2D5A4A !important;
    }
    
    .btn-mint {
        background-color: #2D5A4A;
        border-color: #2D5A4A;
        color: white;
        transition: all 0.3s ease;
    }
    
    .btn-mint:hover {
        background-color: #1a3a2e;
        border-color: #1a3a2e;
        color: white;
        transform: translateY(-2px);
    }
    
    .btn-outline-mint {
        color: #2D5A4A;
        border-color: #2D5A4A;
        transition: all 0.3s ease;
    }
    
    .btn-outline-mint:hover {
        background-color: #2D5A4A;
        border-color: #2D5A4A;
        color: white;
    }
    
    .table-mint {
        background-color: #2D5A4A !important;
    }
    
    .service-table {
        border: 1px solid #98D8C8;
        border-radius: 8px;
        overflow: hidden;
    }
    
    .service-row {
        transition: all 0.3s ease;
    }
    
    .service-row:hover {
        background-color: #f8fffe !important;
        transform: scale(1.01);
    }
    
    .bg-mint-light {
        background-color: #98D8C8 !important;
    }
    
    .table th {
        border-bottom: 2px solid #98D8C8;
        font-weight: 600;
    }
    
    .table td {
        border-bottom: 1px solid #e9ecef;
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.5rem 0.75rem;
    }
    
    .service-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        border-radius: 50%;
        font-size: 1.2rem;
    }
    
    .modal-header.bg-mint {
        background-color: #2D5A4A !important;
    }
    
    .btn-close-white {
        filter: invert(1) grayscale(100%) brightness(200%);
    }
</style>