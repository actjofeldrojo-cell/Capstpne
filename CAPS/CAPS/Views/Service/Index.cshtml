@model List<CAPS.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="UpSert" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Service
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Duration (min)</th>
                    <th>Active</th>
                    <th>Date Created</th>
                    <th>Date Modified</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-truncate">
                            @(
                                !string.IsNullOrEmpty(item.Description) && item.Description.Length > 50
                                ? item.Description.Substring(0, 50) + "…"
                                : item.Description
                                )
                        </td>
                        <td>@item.Category</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Duration</td>
                        <td>
                            @if (item.isActive)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>@item.DateCreated.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@item.DateModified?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td class="text-center">
                            <a asp-action="UpSert" asp-route-id="@item.ServiceId" class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.ServiceId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" title="Delete"
                                        onclick="return confirm('Are you sure you want to delete this service?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.Count == 0)
{
    <h4 class="text-center text-muted">No services found.</h4>
}