@model List<CAPS.Controllers.StaffWithAppointmentCount>

@{
    ViewData["Title"] = "Staff";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="staff-container">
    <!-- Page Title Banner -->
    <div class="page-title-container">
        <h1 class="page-title">STAFF</h1>
    </div>

    <!-- Add Staff Button -->
    <div class="add-staff-container">
        <a asp-action="UpSert" class="add-staff-btn">
            <i class="bi bi-plus"></i> Add Staff
        </a>
    </div>

    <!-- Staff List Panel -->
    <div class="staff-panel">
        <div class="panel-header">
            <h2 class="panel-title">Staff</h2>
        </div>
        <div class="panel-content">
            @if (Model.Count > 0)
            {
                <div class="staff-table-container">
                    <div class="table-header">
                        <div class="table-header-row">
                            <div class="table-header-cell">Name</div>
                            <div class="table-header-cell">Gender</div>
                            <div class="table-header-cell">Phone</div>
                            <div class="table-header-cell">Appointments</div>
                            <div class="table-header-cell">Status</div>
                            <div class="table-header-cell">Actions</div>
                        </div>
                    </div>
                    <div class="table-body">
                        @foreach (var item in Model)
                        {
                            <div class="table-row">
                                <div class="table-cell">
                                    <div class="staff-name">@item.Staff.FullName</div>
                                </div>
                                <div class="table-cell">
                                    <div class="staff-gender">@item.Staff.Gender</div>
                                </div>
                                <div class="table-cell">
                                    <div class="staff-phone">@item.Staff.PhoneNumber</div>
                                </div>
                                <div class="table-cell">
                                    <div class="staff-appointments">
                                        <div class="appointment-count">
                                            <span class="count-label">Total:</span>
                                            <span class="count-value">@item.TotalAppointments</span>
                                        </div>
                                        <div class="appointment-count">
                                            <span class="count-label">Upcoming:</span>
                                            <span class="count-value">@item.UpcomingAppointments</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-cell">
                                    <div class="staff-status">
                                        <span class="status-badge @((item.IsCurrentlyInService ? "in-service" : "available"))">
                                            @(item.IsCurrentlyInService ? "In Service" : "Available")
                                        </span>
                                    </div>
                                </div>
                                <div class="table-cell">
                                    <div class="action-buttons">
                                        <a asp-action="UpSert" asp-route-id="@item.Staff.StaffId" class="action-btn edit-btn" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Appointment" asp-action="Index" asp-route-staffId="@item.Staff.StaffId" class="action-btn view-btn" title="View Appointments">
                                            <i class="bi bi-calendar2-event"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Staff.StaffId" method="post" class="d-inline">
                                            <button type="submit" class="action-btn delete-btn" title="Delete"
                                                    onclick="return confirm('Are you sure you want to delete this staff?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="empty-staff">
                    <div class="empty-icon">
                        <i class="bi bi-person-x"></i>
                    </div>
                    <div class="empty-message">No staff found</div>
                    <div class="empty-description">Add your first staff member to get started</div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh the page every 30 seconds to update availability status
        setTimeout(function() {
            location.reload();
        }, 30000);

        // Add visual indicator for auto-refresh
        $(document).ready(function() {
            // Add a small indicator that the page will auto-refresh
            // $('.page-title').append(' <small class="text-muted">(Auto-refresh: 30s)</small>');
        });
    </script>
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .staff-container {
        padding: 30px;
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .page-title-container {
        background-color: #e8f5e8;
        border: 2px solid #2d5016;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
    }

    .page-title {
        font-family: Arial, sans-serif;
        font-size: 32px;
        font-weight: bold;
        color: #2d5016;
        margin: 0;
        letter-spacing: 2px;
    }

    .add-staff-container {
        margin-bottom: 20px;
    }

    .add-staff-btn {
        background-color: #f8f9fa;
        border: 2px solid #6c757d;
        border-radius: 8px;
        padding: 12px 24px;
        color: #6c757d;
        text-decoration: none;
        font-weight: bold;
        font-size: 16px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-family: Arial, sans-serif;
    }

