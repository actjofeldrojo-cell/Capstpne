@model List<CAPS.Models.Staff>

@{
    ViewData["Title"] = "Staff";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container my-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">@ViewData["Title"]</h4>
        <a asp-action="UpSert" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-lg"></i> Add
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-bordered table-striped align-middle mb-0">
            <thead class="table-dark small">
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Expertise</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Hired</th>
                    <th>Active</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var staff in Model)
                {
                    <tr class="small">
                        <td>@staff.FullName</td>
                        <td>@staff.Gender</td>
                        <td>@staff.Expertise</td>
                        <td class="text-truncate" style="max-width: 150px;">@staff.Email</td>
                        <td>@staff.PhoneNumber</td>
                        <td>@staff.DateHired.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge @((staff.IsActive ? "bg-success" : "bg-secondary"))">
                                @(staff.IsActive ? "Yes" : "No")
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="UpSert" asp-route-id="@staff.StaffId" class="btn btn-sm btn-outline-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@staff.StaffId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"
                                        onclick="return confirm('Are you sure you want to delete this staff?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center text-muted small mt-3">No staff found.</div>
    }
</div>
