            background-color: #6c757d;
            color: #ffffff;
            text-decoration: none;
        }

    .staff-panel {
        background-color: #ffffff;
        border: 2px solid #e8f5e8;
        border-radius: 8px;
        overflow: hidden;
    }

    .panel-header {
        background-color: #ffffff;
        padding: 20px 30px;
        border-bottom: 1px solid #e9ecef;
    }

    .panel-title {
        font-family: Arial, sans-serif;
        font-size: 24px;
        font-weight: bold;
        color: #6c757d;
        margin: 0;
    }

    .panel-content {
        padding: 30px;
        background-color: #ffffff;
    }

    .staff-table-container {
        width: 100%;
    }

    .table-header {
        background-color: #f8f9fa;
        border-bottom: 2px solid #e9ecef;
        margin-bottom: 0;
    }

    .table-header-row {
        display: grid;
        grid-template-columns: 1fr 1fr 1.5fr 1.5fr 1fr 1fr;
        gap: 20px;
        padding: 15px 0;
    }

    .table-header-cell {
        font-family: Arial, sans-serif;
        font-size: 16px;
        font-weight: bold;
        color: #6c757d;
        text-align: left;
        padding: 0 10px;
    }

    .table-body {
        display: flex;
        flex-direction: column;
    }

    .table-row {
        display: grid;
        grid-template-columns: 1fr 1fr 1.5fr 1.5fr 1fr 1fr;
        gap: 20px;
        padding: 15px 0;
        border-bottom: 1px solid #e9ecef;
        align-items: center;
    }

        .table-row:last-child {
            border-bottom: none;
        }

        .table-row:hover {
            background-color: #f8f9fa;
        }

    .table-cell {
        padding: 0 10px;
        display: flex;
        align-items: center;
    }

    .staff-name {
        font-family: Arial, sans-serif;
        font-size: 16px;
        font-weight: bold;
        color: #2d5016;
    }

    .staff-gender {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #6c757d;
    }

    .staff-phone {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #6c757d;
    }

    .staff-appointments {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .appointment-count {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .count-label {
        font-family: Arial, sans-serif;
        font-size: 14px;
        color: #6c757d;
    }

    .count-value {
        font-family: Arial, sans-serif;
        font-size: 14px;
        font-weight: bold;
        color: #2d5016;
    }

    .staff-status {
        display: flex;
        align-items: center;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: bold;
        font-family: Arial, sans-serif;
    }

        .status-badge.available {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .status-badge.in-service {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeaa7;
        }

    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 14px;
    }

        .action-btn.edit-btn {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeaa7;
        }

            .action-btn.edit-btn:hover {
                background-color: #856404;
                color: #ffffff;
            }

        .action-btn.view-btn {
            background-color: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }

            .action-btn.view-btn:hover {
                background-color: #0c5460;
                color: #ffffff;
            }

        .action-btn.delete-btn {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

            .action-btn.delete-btn:hover {
                background-color: #721c24;
                color: #ffffff;
            }

    .empty-staff {
        text-align: center;
        padding: 40px 20px;
        color: #6c757d;
    }

    .empty-icon {
        font-size: 48px;
        margin-bottom: 20px;
        color: #dee2e6;
    }

    .empty-message {
        font-family: Arial, sans-serif;
        font-size: 20px;
        font-weight: bold;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .empty-description {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #6c757d;
        font-style: italic;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .staff-container {
            padding: 15px;
        }

        .page-title {
            font-size: 24px;
        }

        .table-header-row,
        .table-row {
            grid-template-columns: 1fr;
            gap: 10px;
            text-align: left;
        }

        .table-header-cell {
            font-size: 14px;
            font-weight: bold;
            color: #2d5016;
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 5px;
            margin-bottom: 5px;
        }

        .table-cell {
            padding: 5px 0;
        }

        .staff-name {
            font-size: 16px;
            font-weight: bold;
            color: #2d5016;
        }

        .staff-gender,
        .staff-phone {
            font-size: 14px;
            color: #6c757d;
        }

        .action-buttons {
            justify-content: flex-start;
            margin-top: 10px;
        }
    }
</style>
