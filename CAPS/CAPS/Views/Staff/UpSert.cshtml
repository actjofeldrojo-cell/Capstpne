@model CAPS.Models.Staff

@{
    ViewData["Title"] = "Add New Staff";
}

<div class="add-staff-container">
    <!-- Back Button -->
    <div class="back-button-container">
        <a href="javascript:history.back()" class="back-button">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <!-- Main Form Panel -->
    <div class="form-panel">
        <!-- Header Section -->
        <div class="form-header">
            <h1 class="form-title">Add New Staff</h1>
        </div>

        <!-- Form Content -->
        <div class="form-content">
            <form asp-action="UpSert" method="post" class="staff-form">
                <input asp-for="StaffId" type="hidden"/>
                <input asp-for="IsActive" type="hidden"/>

                <div class="form-fields">
                    <div class="form-group">
                        <input asp-for="FullName" class="form-control" placeholder="First Name" required />
                        <span asp-validation-for="FullName" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Expertise" class="form-control" placeholder="Last Name" required />
                        <span asp-validation-for="Expertise" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" required />
                        <span asp-validation-for="PhoneNumber" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <select asp-for="Gender" class="form-control" required>
                            <option value="">Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="validation-message"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="save-button">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .add-staff-container {
        background-color: #f8f9fa;
        padding: 30px;
        min-height: calc(100vh - 120px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        position: relative;
        margin-top: 20px;
    }

    .back-button-container {
        position: absolute;
        top: 30px;
        left: 30px;
        z-index: 1000;
    }

    .back-button {
        background-color: #e8f5e8;
        border: 2px solid #137759;
        border-radius: 6px;
        padding: 8px 16px;
        color: #6c757d;
        text-decoration: none;
        font-size: 14px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 6px;
        font-weight: 500;
        font-family: 'Georgia', 'Times New Roman', serif;
    }

    .back-button:hover {
        background-color: #137759;
        color: #ffffff;
        text-decoration: none;
    }

    .form-panel {
        background-color: #e8f5e8;
        border: 2px solid #137759;
        border-radius: 8px;
        max-width: 500px;
        width: 100%;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 60px;
    }

    .form-header {
        background-color: #137759;
        padding: 20px;
        text-align: center;
    }

    .form-title {
        font-family: 'Arial', sans-serif;
        font-size: 24px;
        font-weight: bold;
        color: #ffffff;
        margin: 0;
        letter-spacing: 0.5px;
    }

    .form-content {
        padding: 30px;
        background-color: #e8f5e8;
    }

    .staff-form {
        width: 100%;
    }

    .form-fields {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 30px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #137759;
        border-radius: 6px;
        background-color: #ffffff;
        font-size: 16px;
        color: #2d5016;
        box-sizing: border-box;
        font-family: 'Arial', sans-serif;
        appearance: none;
    }

    .form-control:focus {
        outline: none;
        border-color: #137759;
        box-shadow: 0 0 0 2px rgba(19, 119, 89, 0.2);
    }

    .form-control::placeholder {
        color: #6c757d;
        font-style: normal;
    }

    .form-control option {
        padding: 8px;
        color: #2d5016;
    }

    .validation-message {
        color: #dc3545;
        font-size: 14px;
        margin-top: 4px;
        font-weight: 500;
    }

    .form-control.is-invalid {
        border-color: #dc3545;
        background-color: #fff5f5;
    }

    .form-actions {
        text-align: right;
    }

    .save-button {
        background-color: #ffffff;
        border: 2px solid #137759;
        border-radius: 6px;
        padding: 12px 24px;
        color: #6c757d;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Arial', sans-serif;
        min-width: 100px;
    }

    .save-button:hover {
        background-color: #137759;
        color: #ffffff;
    }

    .save-button:focus {
        outline: none;
        box-shadow: 0 0 0 2px rgba(19, 119, 89, 0.3);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .add-staff-container {
            padding: 15px;
            margin-top: 10px;
        }

        .form-panel {
            max-width: 100%;
            margin-top: 40px;
        }

        .form-header {
            padding: 15px;
        }

        .form-title {
            font-size: 20px;
        }

        .form-content {
            padding: 20px;
        }

        .back-button {
            padding: 6px 12px;
            font-size: 12px;
        }

        .back-button-container {
            top: 15px;
            left: 15px;
        }

        .form-control {
            font-size: 14px;
            padding: 10px 12px;
        }

        .save-button {
            font-size: 14px;
            padding: 10px 20px;
        }
    }

    @@media (max-width: 480px) {
        .form-content {
            padding: 15px;
        }

        .form-title {
            font-size: 18px;
        }

        .form-control {
            font-size: 14px;
            padding: 10px;
        }

        .save-button {
            font-size: 14px;
            padding: 10px 20px;
            width: 100%;
        }

        .form-actions {
            text-align: center;
        }
    }
</style>




