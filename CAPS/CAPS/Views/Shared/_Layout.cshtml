<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CAPS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CAPS.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-beige">
            <div class="container-fluid">
                <!-- Left: Logo and Brand -->
                <div class="navbar-brand d-flex align-items-center">
                    <div class="logo-icon me-3">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <span class="brand-text">Tenderbody Therapeutic Spa & Massage</span>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Center + Right inside collapsible area -->
                <div class="collapse navbar-collapse" id="mainNav">
                    <!-- Desktop: centered nav -->
                    <ul class="navbar-nav mx-auto gap-4 d-none d-lg-flex">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-area="" asp-controller="Service" asp-action="Public">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-area="" asp-controller="Home" asp-action="Privacy">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-area="" asp-controller="Home" asp-action="Index">Contacts</a>
                        </li>
                    </ul>

                    <!-- Mobile: stacked nav -->
                    <ul class="navbar-nav d-lg-none me-auto mt-2">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Service" asp-action="Public">Services</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">About Us</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Contacts</a></li>
                    </ul>

                    <!-- Right: Guest Registration button -->
                    <div class="guest-login">
                        <div class="d-flex ms-auto mt-2 mt-lg-0">
                            <a class="btn btn-dark-green" asp-area="" asp-controller="Client" asp-action="UpSert">
                                Guest Registration
                            </a>
                        </div>
                        <div class="d-flex ms-auto mt-2 mt-lg-0">
                            <a class="btn btn-dark-green" asp-area="" asp-controller="Admin" asp-action="Login">
                                Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Admin Sidebar (only visible when admin is logged in) -->
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <div class="admin-sidebar">
            <div class="sidebar-header">
                <div class="admin-logo">
                    <i class="fas fa-shield-check"></i>
                </div>
                <span class="admin-title">CAPS Admin</span>
            </div>
            <nav class="sidebar-nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Appointment" ? "active" : "")" asp-controller="Appointment" asp-action="Index">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Appointments</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Client" ? "active" : "")" asp-controller="Client" asp-action="Index">
                            <i class="fas fa-users"></i>
                            <span>Clients</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Service" ? "active" : "")" asp-controller="Service" asp-action="Index">
                            <i class="fas fa-cube"></i>
                            <span>Services</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Staff" ? "active" : "")" asp-controller="Staff" asp-action="Index">
                            <i class="fas fa-id-card"></i>
                            <span>Staff</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Transaction" ? "active" : "")" asp-controller="Transaction" asp-action="Index">
                            <i class="fas fa-receipt"></i>
                            <span>Transactions</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
    
    <main role="main" class="@(User.Identity.IsAuthenticated && User.IsInRole("Admin") ? "admin-main" : "")">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-mint">
        <div class="container">
            &copy; 2025 - CAPS
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* Navigation Styles */
    .guest-login{
        display: flex;
        gap: 1rem;
    }
    .bg-beige {
        background-color: #F5F5DC !important;
    }
    
    .logo-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #2D5A4A 0%, #4A7C59 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }
    
    .brand-text {
        color: #2D5A4A !important;
        font-weight: 600;
        font-size: 1.1rem;
    }
    
    .nav-link {
        color: #2D5A4A !important;
        font-weight: 500;
        transition: color 0.3s ease;
    }
    
    .nav-link:hover {
        color: #1a3a2e !important;
    }
    
    .btn-dark-green {
        background-color: #2D5A4A !important;
        border-color: #2D5A4A !important;
        color: white !important;
        border-radius: 25px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-dark-green:hover {
        background-color: #1a3a2e !important;
        border-color: #1a3a2e !important;
        color: white !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(45, 90, 74, 0.3);
    }
    
    .footer {
        background-color: #98D8C8 !important;
    }
    
    /* Admin Sidebar Styles */
    .admin-sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 250px;
        height: 100vh;
        background-color: #2D5A4A;
        z-index: 1000;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        overflow-y: auto;
    }
    
    .sidebar-header {
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .admin-logo {
        width: 40px;
        height: 40px;
        background-color: #98D8C8;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #2D5A4A;
        font-size: 1.2rem;
    }
    
    .admin-title {
        color: #98D8C8;
        font-weight: 600;
        font-size: 1.1rem;
    }
    
    .sidebar-nav {
        padding: 1rem 0;
    }
    
    .nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .nav-item {
        margin: 0;
    }
    
    .nav-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.5rem;
        color: #98D8C8;
        text-decoration: none;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
    }
    
    .nav-link:hover {
        background-color: rgba(152, 216, 200, 0.1);
        color: #ffffff;
        border-left-color: #98D8C8;
        text-decoration: none;
    }
    
    .nav-link.active {
        background-color: rgba(152, 216, 200, 0.2);
        color: #ffffff;
        border-left-color: #98D8C8;
        font-weight: 600;
    }
    
    .nav-link i {
        width: 20px;
        text-align: center;
        font-size: 1.1rem;
    }
    
    .admin-main {
        margin-left: 250px;
        min-height: calc(100vh - 60px);
    }
    
    /* Responsive adjustments */
    @@media (max-width: 991px) {
        .brand-text {
            font-size: 1rem;
        }
        
        .logo-icon {
            width: 35px;
            height: 35px;
            font-size: 1rem;
        }
        
        .admin-sidebar {
            width: 200px;
        }
        
        .admin-main {
            margin-left: 200px;
        }
    }
    
    @@media (max-width: 768px) {
        .admin-sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }
        
        .admin-sidebar.show {
            transform: translateX(0);
        }
        
        .admin-main {
            margin-left: 0;
        }
        
        .nav-link {
            padding: 0.75rem 1rem;
        }
        
        .admin-title {
            font-size: 1rem;
        }
    }
    
    @@media (max-width: 576px) {
        .navbar-brand {
            flex-direction: column;
            text-align: center;
        }
        
        .brand-text {
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }
        
        .admin-sidebar {
            width: 100%;
        }
        
        .sidebar-header {
            padding: 1rem;
        }
        
        .nav-link {
            padding: 1rem;
        }
    }
</style>
