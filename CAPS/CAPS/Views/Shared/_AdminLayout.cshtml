<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CAPS Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CAPS.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #ffffff;
            font-family: Arial, sans-serif;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background-color: #ffffff;
            border-right: 2px solid #EAF1E7;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 30px 20px;
            text-align: center;
            border-bottom: 2px solid #EAF1E7;
        }

        .lotus-logo {
            margin-bottom: 15px;
        }

        .sidebar-brand {
            font-family: Arial, sans-serif;
            font-size: 16px;
            font-weight: bold;
            color: #2d5016;
            line-height: 1.3;
        }

        .sidebar-nav {
            padding: 20px 0;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .nav-item {
            margin-bottom: 8px;
            padding: 0 20px;
        }

        .sidebar-footer {
            margin-top: auto;
            padding: 20px 20px 40px 20px;
            border-top: 2px solid #EAF1E7;
        }

        .logout-nav-item {
            padding: 0;
        }

        .nav-link {
            color: #2d5016;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            text-decoration: none;
            border: 2px solid #EAF1E7;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-weight: 500;
            font-family: Arial, sans-serif;
        }

            .nav-link:hover {
                background-color: #EAF1E7;
                border-color: #2d5016;
            }

            .nav-link.active {
                background-color: #EAF1E7;
                border-color: #2d5016;
                font-weight: bold;
            }

            .nav-link i {
                margin-right: 15px;
                width: 20px;
                text-align: center;
                font-size: 18px;
            }

        .main-content {
            flex: 1;
            margin-left: 280px;
            background-color: #ffffff;
            min-height: 100vh;
        }

        .top-navbar {
            background: white;
            border-bottom: 2px solid #EAF1E7;
            padding: 20px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .content-area {
            padding: 30px;
            background-color: #ffffff;
        }

        .sidebar-toggle {
            display: none;
            background: none;
            border: none;
            color: #2d5016;
            font-size: 1.5rem;
        }

        .welcome-text {
            font-family: Arial, sans-serif;
            color: #2d5016;
            font-size: 18px;
            font-weight: bold;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background-color: #EAF1E7;
            border: 2px solid #2d5016;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #2d5016;
        }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0;
            }

            .sidebar-toggle {
                display: block;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="lotus-logo">
                    <img src="~/images/newlogo.png" alt="Lotus Logo" width="60" height="60" />
                </div>
                <div class="sidebar-brand">
                    Tenderbody Therapeutic Spa & Massage
                </div>
            </div>

            <div class="sidebar-nav">
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                        <i class="bi bi-grid-3x3-gap"></i>
                        <span>Dashboard</span>
                    </a>
                </div>

                <div class="nav-item">
                    <a class="nav-link" asp-controller="Appointment" asp-action="Index">
                        <i class="bi bi-calendar-check"></i>
                        <span>Appointments</span>
                    </a>
                </div>

                <div class="nav-item">
                    <a class="nav-link" asp-controller="Client" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Clients</span>
                    </a>
                </div>

                <div class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">
                        <i class="bi bi-box"></i>
                        <span>Products</span>
                    </a>
                </div>

                <div class="nav-item">
                    <a class="nav-link" asp-controller="Service" asp-action="Index">
                        <i class="bi bi-hand-index"></i>
                        <span>Services</span>
                    </a>
                </div>

                <div class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="Index">
                        <i class="bi bi-person"></i>
                        <span>Staff</span>
                    </a>
                </div>

                <div class="nav-item">
                    <a class="nav-link" asp-controller="Transaction" asp-action="Index">
                        <i class="bi bi-arrow-repeat"></i>
                        <span>Transaction</span>
                    </a>
                </div>
            </div>

            <div class="sidebar-footer">
                <div class="logout-nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navbar -->
            <div class="top-navbar">
                <div class="d-flex align-items-center">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <span class="welcome-text ms-3">Welcome Admin!</span>
                </div>

                <div class="d-flex align-items-center">
                    <div class="user-avatar">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
            </div>

            <!-- Content Area -->
            <div class="content-area">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Sidebar toggle for mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });

        // Set active nav item based on current controller
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href') && currentPath.includes(link.getAttribute('href'))) {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

