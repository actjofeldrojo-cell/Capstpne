<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CAPS Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CAPS.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        .admin-container {
            display: flex;
            min-height: 100vh;
        }
        
        .sidebar {
            width: 250px;
            background: linear-gradient(135deg, #2D5A4A 0%, #1a3d2f 100%);
            color: white;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
        }
        
        .sidebar-header {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .sidebar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #98D8C8;
        }
        
        .sidebar-nav {
            padding: 20px 0;
        }
        
        .nav-item {
            margin-bottom: 5px;
        }
        
        .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 12px 20px;
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .nav-link:hover {
            color: white;
            background-color: rgba(255,255,255,0.1);
            transform: translateX(5px);
        }
        
        .nav-link.active {
            color: white;
            background-color: rgba(152, 216, 200, 0.2);
            border-left: 4px solid #98D8C8;
        }
        
        .nav-link i {
            margin-right: 12px;
            width: 20px;
            text-align: center;
        }
        
        .main-content {
            flex: 1;
            margin-left: 250px;
            background-color: #f8f9fa;
            min-height: 100vh;
        }
        
        .top-navbar {
            background: white;
            border-bottom: 1px solid #dee2e6;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .content-area {
            padding: 30px;
        }
        
        .sidebar-toggle {
            display: none;
            background: none;
            border: none;
            color: #2D5A4A;
            font-size: 1.5rem;
        }
        
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            
            .sidebar.show {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .sidebar-toggle {
                display: block;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <i class="bi bi-shield-check"></i> CAPS Admin
                </div>
            </div>
            
            <div class="sidebar-nav">
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Appointment" asp-action="Index">
                        <i class="bi bi-calendar-event"></i>
                        <span>Appointments</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Client" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Clients</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">
                        <i class="bi bi-box"></i>
                        <span>Products</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Service" asp-action="Index">
                        <i class="bi bi-concierge-bell"></i>
                        <span>Services</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="Index">
                        <i class="bi bi-person-badge"></i>
                        <span>Staff</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Transaction" asp-action="Index">
                        <i class="bi bi-receipt"></i>
                        <span>Transactions</span>
                    </a>
                </div>
                
                <hr class="border-light my-4 mx-3">
                
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i>
                        <span>Back to Site</span>
                    </a>
                </div>
                
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </nav>
        
        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navbar -->
            <div class="top-navbar">
                <div class="d-flex align-items-center">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <h4 class="mb-0 ms-3">@ViewData["Title"]</h4>
                </div>
                
                <div class="d-flex align-items-center">
                    <span class="text-muted me-3">Welcome, Admin</span>
                    <div class="avatar bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-person text-white"></i>
                    </div>
                </div>
            </div>
            
            <!-- Content Area -->
            <div class="content-area">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Sidebar toggle for mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });
        
        // Set active nav item based on current controller
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') && currentPath.includes(link.getAttribute('href'))) {
                    link.classList.add('active');
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

