@model IEnumerable<CAPS.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="transactions-container">
    <!-- Page Title Banner -->
    <div class="page-title-container">
        <h1 class="page-title">TRANSACTIONS</h1>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons-container">
        <a asp-action="UpSert" class="action-btn new-transaction-btn">
            <i class="bi bi-plus"></i> New Transaction
        </a>
        <a asp-action="Report" class="action-btn reports-btn">
            <i class="bi bi-list-ul"></i> Reports
        </a>
    </div>

    <!-- Search and Filter Panel -->
    <div class="search-filter-panel">
        <div class="panel-header">
            <div class="search-fields">
                <div class="search-field">
                    <label for="searchTerm">Search</label>
                    <input type="text" id="searchTerm" class="form-control" placeholder="Search by client name or service...">
                </div>
                <div class="search-field">
                    <label for="dateFrom">From Date</label>
                    <input type="date" id="dateFrom" class="form-control">
                </div>
                <div class="search-field">
                    <label for="dateTo">To Date</label>
                    <input type="date" id="dateTo" class="form-control">
                </div>
                <div class="clear-button-container">
                    <button id="clearFilters" class="clear-btn">Clear</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="summary-cards-container">
        <div class="summary-card">
            <div class="card-header">
                <h3 class="card-title">Total Transaction</h3>
            </div>
            <div class="card-value" id="totalTransactions">@Model.Count()</div>
        </div>
        <div class="summary-card">
            <div class="card-header">
                <h3 class="card-title">Total Revenue</h3>
            </div>
            <div class="card-value" id="totalRevenue">$@Model.Sum(t => t.TotalAmount).ToString("N2")</div>
        </div>
        <div class="summary-card">
            <div class="card-header">
                <h3 class="card-title">Today's Transaction</h3>
            </div>
            <div class="card-value" id="todayTransactions">@Model.Count(t => t.TransactionDate.Date == DateTime.Today)</div>
        </div>
        <div class="summary-card">
            <div class="card-header">
                <h3 class="card-title">Average Value</h3>
            </div>
            <div class="card-value" id="avgValue">$@(Model.Any() ? Model.Average(t => t.TotalAmount).ToString("N2") : "0.00")</div>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="transactions-table-container">
        <div class="table-header">
            <div class="table-header-row">
                <div class="table-header-cell">Client Name</div>
                <div class="table-header-cell">Availed Services</div>
                <div class="table-header-cell">Amount to Pay</div>
                <div class="table-header-cell">For Payment</div>
            </div>
        </div>
        <div class="table-body" id="transactionsTable">
            @foreach (var transaction in Model)
            {
                <div class="table-row" data-transaction-id="@transaction.TransactionId">
                    <div class="table-cell">
                        <div class="client-info">
                            <div class="client-avatar">
                                @(transaction.Client?.FirstName?.Substring(0, 1) ?? "?")
                            </div>
                            <div class="client-details">
                                <div class="client-name">@(transaction.Client?.FirstName + " " + transaction.Client?.LastName)</div>
                                <div class="client-id">@transaction.Client?.PhoneNumber</div>
                            </div>
                        </div>
                    </div>
                    <div class="table-cell">
                        <div class="service-info">
                            <div class="service-name">@transaction.Service?.Name</div>
                            <div class="service-duration">@transaction.Service?.Duration min</div>
                        </div>
                    </div>
                    <div class="table-cell">
                        <div class="amount-info">
                            <div class="amount-value">$@transaction.TotalAmount.ToString("N2")</div>
                            @if (transaction.DiscountAmount > 0)
                            {
                                <div class="discount-amount">-$@transaction.DiscountAmount.ToString("N2")</div>
                            }
                        </div>
                    </div>
                    <div class="table-cell">
                        <a href="@Url.Action("UpSert", "Transaction", new { id = transaction.TransactionId })" 
                           class="payment-btn" 
                           title="For Payment">
                            <i class="bi bi-pencil-square"></i> For Payment
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this transaction? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function() {
            // Simple search functionality
            $('#searchTerm').on('keyup', function() {
                var searchTerm = $(this).val().toLowerCase();
                $('.table-row').each(function() {
                    var clientName = $(this).find('.client-name').text().toLowerCase();
                    var serviceName = $(this).find('.service-name').text().toLowerCase();
                    
                    if (clientName.includes(searchTerm) || serviceName.includes(searchTerm)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
                updateSummaryCards();
            });

            // Clear filters
            $('#clearFilters').on('click', function() {
                $('#searchTerm').val('');
                $('#dateFrom').val('');
                $('#dateTo').val('');
                $('.table-row').show();
                updateSummaryCards();
            });

            function updateSummaryCards() {
                var visibleRows = $('.table-row:visible');
                var totalAmount = 0;
                
                visibleRows.each(function() {
                    var amountText = $(this).find('.amount-value').text();
                    var amount = parseFloat(amountText.replace(/[^0-9.-]+/g, ''));
                    totalAmount += amount;
                });
                
                $('#totalTransactions').text(visibleRows.length);
                $('#totalRevenue').text('$' + totalAmount.toFixed(2));
                $('#avgValue').text(visibleRows.length > 0 ? '$' + (totalAmount / visibleRows.length).toFixed(2) : '$0.00');
            }
        });

        // Delete transaction function
        function deleteTransaction(id) {
            $('#deleteModal').modal('show');
            $('#confirmDelete').off('click').on('click', function() {
                $.post('@Url.Action("DeleteConfirmed", "Transaction")', { id: id })
                    .done(function() {
                        $('#deleteModal').modal('hide');
                        location.reload();
                    })
                    .fail(function() {
                        alert('Error deleting transaction. Please try again.');
                    });
            });
        }
    </script>
}

