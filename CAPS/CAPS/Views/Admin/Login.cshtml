@{
    ViewData["Title"] = "Admin Login";
    Layout = null;
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <br />
            <br />
            <br />
            <div class="login-panel">
                <!-- Logo Section -->
                <div class="logo-section">
                    <div class="lotus-logo">
                        <img src="~/images/newlogo.png" alt="Lotus Logo" width="250" height="200" />
                    </div>
                    <h1 class="spa-title">Tenderbody Therapeutic Spa & Massage</h1>
                </div>

                <!-- Form Section -->
                <div class="form-section">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Login" method ="post">
                        @Html.AntiForgeryToken()

                        <!-- Colori ni og red para sa validation -->
                        @Html.ValidationSummary()

                        <div class="form-group">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username"
                                   placeholder="Enter username" required autofocus>
                        </div>

                        <div class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <div class="password-input-container">
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Enter password" required>
                                <button type="button" class="password-toggle" onclick="togglePassword()">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <button type="submit" class="login-btn">LOGIN</button>
                    </form>

                    <div class="back-link">
                        @*             <a asp-controller="Home" asp-action="Index">‚Üê Back to Home</a> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #ffffff;
        font-family: Arial, sans-serif;
    }

    .login-panel {
        background-color: #EAF1E7;
        border: 2px solid #2d5016;
        border-radius: 8px;
        padding: 40px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 0 auto;
    }

    .logo-section {
        text-align: center;
        margin-bottom: 10px;
    }

    .lotus-logo {
        margin-bottom: 10px;
    }

    .spa-title {
        font-family: Arial, sans-serif;
        font-size: 24px;
        font-weight: bold;
        color: #2d5016;
        margin-top: -70px;
        line-height: 1.2;
    }

    .admin-login-title {
        font-family: Arial, sans-serif;
        font-size: 18px;
        font-weight: bold;
        color: #2d5016;
        margin-bottom: 30px;
    }

    .form-section {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #2d5016;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #2d5016;
        border-radius: 4px;
        background-color: #ffffff;
        font-size: 16px;
        box-sizing: border-box;
    }

        .form-control:focus {
            outline: none;
            border-color: #2d5016;
            box-shadow: 0 0 0 2px rgba(45, 80, 22, 0.2);
        }

    .password-input-container {
        position: relative;
        display: flex;
        align-items: center;
    }

        .password-input-container .form-control {
            padding-right: 50px;
        }

    .password-toggle {
        position: absolute;
        right: 12px;
        background: none;
        border: none;
        cursor: pointer;
        color: #2d5016;
        padding: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .password-toggle:hover {
            color: #1a3a0e;
        }

    .login-btn {
        width: 100%;
        padding: 12px 24px;
        background-color: #ffffff;
        border: 2px solid #2d5016;
        border-radius: 6px;
        color: #2d5016;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 20px;
    }

        .login-btn:hover {
            background-color: #2d5016;
            color: #ffffff;
        }

        .login-btn:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(45, 80, 22, 0.3);
        }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

        .back-link a {
            color: #2d5016;
            text-decoration: none;
            font-size: 14px;
        }

            .back-link a:hover {
                text-decoration: underline;
            }

    .alert {
        margin-bottom: 20px;
        padding: 12px;
        border-radius: 4px;
        border: 1px solid transparent;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .btn-close {
        background: none;
        border: none;
        font-size: 18px;
        cursor: pointer;
        float: right;
        margin-top: -2px;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .login-panel {
            padding: 30px 20px;
            margin: 20px;
        }

        .spa-title {
            font-size: 20px;
        }

        .admin-login-title {
            font-size: 16px;
        }
    }
</style>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById('password');
        const toggleButton = document.querySelector('.password-toggle');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleButton.innerHTML = `
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                    <line x1="1" y1="1" x2="23" y2="23"></line>
                </svg>
            `;
        } else {
            passwordInput.type = 'password';
            toggleButton.innerHTML = `
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle cx="12" cy="12" r="3"></circle>
                </svg>
            `;
        }
    }
</script>

