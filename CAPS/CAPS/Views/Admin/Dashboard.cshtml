@model CAPS.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@if (Model == null)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Dashboard data is not available. Please try refreshing the page.
    </div>
    return;
}

@try
{

<!-- Dashboard Title -->
<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-title-container">
            <h1 class="dashboard-title">DASHBOARD</h1>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-lg-4 col-md-6 mb-3">
        <div class="dashboard-card">
            <a asp-controller="Client" asp-action="Index" class="card-link">
                <div class="card-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="card-content">
                    <span class="card-title">Clients</span>
                </div>
            </a>
        </div>
    </div>
    
    <div class="col-lg-4 col-md-6 mb-3">
        <div class="dashboard-card">
            <a asp-controller="Product" asp-action="Index" class="card-link">
                <div class="card-icon">
                    <i class="bi bi-box"></i>
                </div>
                <div class="card-content">
                    <span class="card-title">Products</span>
                </div>
            </a>
        </div>
    </div>
    
    <div class="col-lg-4 col-md-6 mb-3">
        <div class="dashboard-card">
            <a asp-controller="Service" asp-action="Index" class="card-link">
                <div class="card-icon">
                    <i class="bi bi-hand-index"></i>
                </div>
                <div class="card-content">
                    <span class="card-title">Services</span>
                </div>
            </a>
        </div>
    </div>
    
    <div class="col-lg-6 col-md-6 mb-3">
        <div class="dashboard-card">
            <a asp-controller="Staff" asp-action="Index" class="card-link">
                <div class="card-icon">
                    <i class="bi bi-person"></i>
                </div>
                <div class="card-content">
                    <span class="card-title">Staff</span>
                </div>
            </a>
        </div>
    </div>
    
    <div class="col-lg-6 col-md-6 mb-3">
        <div class="dashboard-card">
            <a asp-controller="Transaction" asp-action="Index" class="card-link">
                <div class="card-icon">
                    <i class="bi bi-arrow-repeat"></i>
                </div>
                <div class="card-content">
                    <span class="card-title">Transaction</span>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Recent Clients Section -->
<div class="row">
    <div class="col-12">
        <div class="recent-clients-container">
            <div class="recent-clients-header">
                <h2 class="recent-clients-title">Recent Clients</h2>
            </div>
            <div class="recent-clients-content">
                @if (Model.RecentClients != null && Model.RecentClients.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Gender</th>
                                    <th>Registered</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var client in Model.RecentClients.Where(c => c != null))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar bg-info rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                    <i class="bi bi-person text-white small"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@(client.FirstName ?? "Unknown") @(client.LastName ?? "")</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <small>@(client.PhoneNumber ?? "No phone")</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@(client.Gender ?? "Unknown")</span>
                                        </td>
                                        <td>
                                            <small>@(client.DateRegistered != default(DateTime) ? client.DateRegistered.ToString("MMM dd") : "Date not set")</small><br>
                                            <small class="text-muted">@(client.DateRegistered != default(DateTime) ? client.DateRegistered.ToString("HH:mm") : "Time not set")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-people display-4 text-muted"></i>
                        <p class="mt-3">No recent clients found</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-title-container {
        background-color: #e8f5e8;
        border: 2px solid #2d5016;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        margin-bottom: 30px;
    }

    .dashboard-title {
        font-size: 32px;
        font-family: Arial, sans-serif;
        font-weight: bold;
        color: #2d5016;
        margin: 0;
        letter-spacing: 2px;
    }

    .dashboard-card {
        background-color: #ffffff;
        border: 2px solid #e8f5e8;
        border-radius: 8px;
        padding: 30px;
        text-align: center;
        transition: all 0.3s ease;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .dashboard-card:hover {
        border-color: #2d5016;
        background-color: #e8f5e8;
        transform: translateY(-2px);
    }

    .card-link {
        text-decoration: none;
        color: #2d5016;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .card-link:hover {
        text-decoration: none;
        color: #2d5016;
    }

    .card-icon {
        font-size: 36px;
        margin-bottom: 15px;
        color: #2d5016;
    }

    .card-content {
            font-family: Arial, sans-serif;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        color: #2d5016;
    }

    .recent-clients-container {
        background-color: #ffffff;
        border: 2px solid #e8f5e8;
        border-radius: 8px;
        margin-top: 30px;
    }

    .recent-clients-header {
        background-color: #e8f5e8;
        border-bottom: 2px solid #2d5016;
        padding: 20px;
        text-align: center;
    }

    .recent-clients-title {
        font-family: Arial, sans-serif;
        font-size: 24px;
        font-weight: bold;
        color: #2d5016;
        margin: 0;
    }

    .recent-clients-content {
        padding: 30px;
        min-height: 300px;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        color: #2d5016;
        background-color: #f8f9fa;
        border-bottom: 2px solid #e8f5e8;
    }

    .table td {
        border-bottom: 1px solid #e8f5e8;
        vertical-align: middle;
    }

    .avatar {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .badge {
        font-size: 0.75em;
    }

    .alert {
        border-radius: 8px;
        border: 2px solid #e8f5e8;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeaa7;
        color: #856404;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .dashboard-title {
            font-size: 24px;
        }

        .dashboard-card {
            height: 100px;
            padding: 20px;
        }

        .card-icon {
            font-size: 28px;
            margin-bottom: 10px;
        }

        .card-title {
            font-size: 16px;
        }

        .recent-clients-title {
            font-size: 20px;
        }

        .recent-clients-content {
            padding: 20px;
        }
    }
</style>

}
catch (Exception ex)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Error loading dashboard:</strong> @ex.Message
        <br />
        <small class="text-muted">Please contact the administrator if this problem persists.</small>
    </div>
}
