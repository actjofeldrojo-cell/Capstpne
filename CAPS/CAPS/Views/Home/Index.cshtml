@{
    ViewData["Title"] = "Tenderbody Therapeutic Spa & Massage";
}

<!-- Hero Section with Massage Background -->
<div class="hero-section">
    <div class="hero-overlay">
        <div class="container">
            <div class="hero-content text-center">
                <div class="hero-tagline">
                    <h1 class="display-4 fw-bold text-dark mb-4">Step into comfort, Leave with Bliss</h1>
                    <a href="@Url.Action("UpSert", "Client")" class="btn btn-hero btn-lg">
                        Start Your Healing Journey
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Spa Name & Logo Section -->
<div class="spa-logo-section py-5 bg-beige">
    <div class="container text-center">
        <div class="lotus-logo mb-4">
            <i class="fas fa-seedling fa-5x text-mint"></i>
        </div>
        <h2 class="spa-name text-mint">TENDERBODY THERAPEUTIC SPA & MASSAGE</h2>
    </div>
</div>

<!-- Feel Welcome Section -->
<div class="feel-welcome-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="section-image">
                    <img src="/images/HomeTwo.png" alt="Hands performing shoulder massage" class="img-fluid rounded">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-panel bg-dark-green text-white p-5 rounded">
                    <h3 class="section-title script-font mb-4">Feel Welcome</h3>
                    <p class="section-text">
                        At Tenderbody Therapeutic Spa & Massage, we believe that every client deserves a personalized and relaxing experience. 
                        Our welcoming atmosphere and professional staff ensure that you feel comfortable and cared for from the moment you walk through our doors. 
                        We are committed to providing exceptional service that promotes your well-being and leaves you feeling refreshed and rejuvenated.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About Tenderbody Section -->
<div class="about-section py-5 bg-beige">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="text-panel bg-white p-5 rounded">
                    <h3 class="section-title script-font text-mint mb-4">About Tenderbody</h3>
                    <p class="section-text text-muted">
                        Tenderbody Therapeutic Spa & Massage is dedicated to providing high-quality wellness services that cater to your individual needs. 
                        Our experienced therapists use proven techniques and premium products to deliver exceptional results. 
                        We take pride in our personalized approach, ensuring that each treatment is tailored to help you achieve your wellness goals 
                        and build lasting relationships with our valued clients.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="section-image">
                    <img src="/images/chest-massage.jpg" alt="Person receiving chest and shoulder massage" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Exceptional Service Section -->
<div class="exceptional-service-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="section-image">
                    <img src="/images/spa-bath.jpg" alt="Person relaxing in spa bath" class="img-fluid rounded">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-panel bg-dark-green text-white p-5 rounded">
                    <h3 class="section-title script-font mb-4">Exceptional Service</h3>
                    <p class="section-text">
                        Experience the difference with our exceptional service that combines skilled therapists, calming atmosphere, and personalized care. 
                        From the moment you arrive, our team ensures you receive a soothing and rejuvenating experience that addresses your specific needs. 
                        Our commitment to excellence means every treatment is designed to help you relax, unwind, and leave feeling completely refreshed.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Customer Testimonials Section -->
<div class="testimonials-section py-5 bg-beige">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="testimonials-title text-mint">Customer Testimonials</h2>
        </div>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="testimonial-card bg-white p-4 rounded border">
                    <div class="testimonial-header d-flex align-items-center mb-3">
                        <img src="/images/testimonial1.jpg" alt="Customer 1" class="testimonial-photo rounded-circle me-3">
                        <div class="testimonial-info">
                            <h6 class="mb-0 text-mint">John Smith</h6>
                        </div>
                    </div>
                    <p class="testimonial-text text-muted">
                        "Amazing Massage! The atmosphere was so calming, and I felt completely relaxed. Can't wait to be back again."
                    </p>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="testimonial-card bg-white p-4 rounded border">
                    <div class="testimonial-header d-flex align-items-center mb-3">
                        <img src="/images/testimonial2.jpg" alt="Customer 2" class="testimonial-photo rounded-circle me-3">
                        <div class="testimonial-info">
                            <h6 class="mb-0 text-mint">Mike Johnson</h6>
                        </div>
                    </div>
                    <p class="testimonial-text text-muted">
                        "The staff were so welcoming, and I left with the smoothest skin ever because of their quality facial massage."
                    </p>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="testimonial-card bg-white p-4 rounded border">
                    <div class="testimonial-header d-flex align-items-center mb-3">
                        <img src="/images/testimonial3.jpg" alt="Customer 3" class="testimonial-photo rounded-circle me-3">
                        <div class="testimonial-info">
                            <h6 class="mb-0 text-mint">Sarah Lee</h6>
                        </div>
                    </div>
                    <p class="testimonial-text text-muted">
                        "I love the paraffin treatment! My hands feel so soft and the service was exceptional!"
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

