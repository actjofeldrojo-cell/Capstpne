<style>
    /* Hero Section with Massage Background */
    .hero-section {
        background-image: url('/images/HomepageBackground.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
    }
    
    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
    }
    
    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
        padding: 2rem;
        text-align: center;
        margin: 0 auto;
    }
    
    .hero-tagline {
        background: rgba(255, 255, 255, 0.5);
        padding: 3rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(5px);
        text-align: center;
    }
    
    .btn-hero {
        background-color: #2D5A4A !important;
        border-color: #2D5A4A !important;
        color: white !important;
        border-radius: 30px;
        padding: 1rem 2.5rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }
    
    .btn-hero:hover {
        background-color: #1a3a2e !important;
        border-color: #1a3a2e !important;
        color: white !important;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(45, 90, 74, 0.4);
        text-decoration: none;
    }
    
    .text-mint {
        color: #2D5A4A !important;
    }
    
    .border-mint {
        border-color: #98D8C8 !important;
        border-width: 2px;
    }
    
    /* New Section Styles */
    .bg-beige {
        background-color: #F5F5DC !important;
    }
    
    .bg-dark-green {
        background-color: #2D5A4A !important;
    }
    
    .spa-logo-section {
        padding: 4rem 0;
    }
    
    .lotus-logo {
        margin-bottom: 2rem;
    }
    
    .spa-name {
        font-size: 2.5rem;
        font-weight: 600;
        letter-spacing: 2px;
    }
    
    .section-title {
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 1.5rem;
    }
    
    .script-font {
        font-family: 'Dancing Script', cursive;
    }
    
    .section-text {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 0;
    }
    
    .text-panel {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
    }
    
    .section-image img {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
    }
    
    .testimonials-title {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 3rem;
    }
    
    .testimonial-card {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid #e9ecef !important;
        transition: transform 0.3s ease;
        height: 100%;
    }
    
    .testimonial-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    
    .testimonial-photo {
        width: 60px;
        height: 60px;
        object-fit: cover;
    }
    
    .testimonial-text {
        font-style: italic;
        line-height: 1.6;
    }
    
    /* Graphics Placeholders */
    .graphics-placeholder {
        background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
        border: 2px dashed #98D8C8;
        border-radius: 15px;
        padding: 3rem;
        text-align: center;
        color: #6c757d;
        transition: all 0.3s ease;
        min-height: 200px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    
    .graphics-placeholder.large {
        min-height: 300px;
        padding: 4rem;
    }
    
    .graphics-placeholder:hover {
        border-color: #2D5A4A;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(45, 90, 74, 0.1);
    }
    
    .graphics-placeholder i {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #98D8C8;
    }
    
    .graphics-placeholder.large i {
        font-size: 4rem;
    }
    
    .graphics-placeholder span {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2D5A4A;
    }
    
    /* Description Placeholders */
    .description-placeholder {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 2rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    /* Separator */
    .separator {
        padding: 2rem 0;
    }
    
    /* Our Story Section */
    .our-story-section {
        background: linear-gradient(135deg, #ffffff 0%, #f8fffe 100%);
    }
    
    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, #f8fffe 0%, #e9ecef 100%);
    }
    
    /* Buttons */
    .btn-mint {
        background-color: #2D5A4A;
        border-color: #2D5A4A;
        color: white;
        transition: all 0.3s ease;
    }
    
    .btn-mint:hover {
        background-color: #1a3a2e;
        border-color: #1a3a2e;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(45, 90, 74, 0.2);
    }
    
    .btn-outline-mint {
        color: #2D5A4A;
        border-color: #2D5A4A;
        transition: all 0.3s ease;
    }
    
    .btn-outline-mint:hover {
        background-color: #2D5A4A;
        border-color: #2D5A4A;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(45, 90, 74, 0.2);
    }
    
    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-section {
            height: 80vh;
        }
        
        .hero-tagline {
            padding: 2rem;
        }
        
        .display-4 {
            font-size: 2.5rem;
        }
        
        .btn-hero {
            padding: 0.8rem 2rem;
            font-size: 1rem;
        }
        
        .spa-name {
            font-size: 2rem;
        }
        
        .section-title {
            font-size: 2rem;
        }
        
        .text-panel {
            padding: 3rem !important;
        }
        
        .graphics-placeholder.large {
            min-height: 200px;
            padding: 2rem;
        }
        
        .graphics-placeholder.large i {
            font-size: 2.5rem;
        }
    }
    
    @@media (max-width: 576px) {
        .hero-section {
            height: 70vh;
        }
        
        .hero-tagline {
            padding: 1.5rem;
        }
        
        .display-4 {
            font-size: 2rem;
        }
        
        .btn-hero {
            padding: 0.7rem 1.5rem;
            font-size: 0.9rem;
        }
        
        .hero-content {
            padding: 1rem;
        }
        
        .spa-name {
            font-size: 1.5rem;
            letter-spacing: 1px;
        }
        
        .section-title {
            font-size: 1.8rem;
        }
        
        .text-panel {
            padding: 2rem !important;
        }
        
        .testimonials-title {
            font-size: 2rem;
        }
    }
</style>