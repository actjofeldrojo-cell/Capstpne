@model CAPS.Controllers.AppointmentWithClientDto

@{
    ViewData["Title"] = "Client Registration";
}

<div class="container my-5">
    <div class="row justify-content-center">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="text-center mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a asp-action="UserAppointments" class="btn btn-link text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Back to Appointments
                    </a>
                    <a asp-controller="Admin" asp-action="Login" class="btn btn-outline-primary">
                        <i class="bi bi-shield-check me-2"></i>Admin Login
                    </a>
                </div>
                <h2 class="h3 mb-2">@ViewData["Title"]</h2>
                <p class="text-muted">Register as a new client with us</p>
            </div>

            <form asp-action="Book" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Personal Information -->
                <div class="form-section mb-4">
                    <h5 class="mb-3">Personal Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClientFirstName" class="form-label">First Name *</label>
                            <input asp-for="ClientFirstName" class="form-control" placeholder="Enter first name" required />
                            <span asp-validation-for="ClientFirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClientLastName" class="form-label">Last Name *</label>
                            <input asp-for="ClientLastName" class="form-control" placeholder="Enter last name" required />
                            <span asp-validation-for="ClientLastName" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClientPhoneNumber" class="form-label">Phone Number *</label>
                            <input asp-for="ClientPhoneNumber" type="tel" class="form-control" placeholder="Enter phone number" required />
                            <span asp-validation-for="ClientPhoneNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PreferredTherapistGender" class="form-label">Preferred Therapist Gender</label>
                            <select asp-for="PreferredTherapistGender" class="form-select">
                                <option value="">Select Preference</option>
                                <option value="Female">Female</option>
                                <option value="Male">Male</option>
                                <option value="No Preference">No Preference</option>
                            </select>
                            <span asp-validation-for="PreferredTherapistGender" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MassagePressureLevel" class="form-label">Massage Pressure Level</label>
                            <select asp-for="MassagePressureLevel" class="form-select">
                                <option value="">Select Pressure Level</option>
                                <option value="Soft">Soft</option>
                                <option value="Medium">Medium</option>
                                <option value="Hard">Hard</option>
                            </select>
                            <span asp-validation-for="MassagePressureLevel" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MusicPreference" class="form-label">Music Preference</label>
                            <select asp-for="MusicPreference" class="form-select">
                                <option value="">Select Music Preference</option>
                                <option value="Relaxing Music">Relaxing Music</option>
                                <option value="Nature Sounds">Nature Sounds</option>
                                <option value="Silence">Silence</option>
                                <option value="No Preference">No Preference</option>
                            </select>
                            <span asp-validation-for="MusicPreference" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TemperaturePreference" class="form-label">Temperature Preference</label>
                            <select asp-for="TemperaturePreference" class="form-select">
                                <option value="">Select Temperature Preference</option>
                                <option value="Warm Room">Warm Room</option>
                                <option value="Cool Room">Cool Room</option>
                                <option value="Heated Bed/Table">Heated Bed/Table</option>
                                <option value="No Preference">No Preference</option>
                            </select>
                            <span asp-validation-for="TemperaturePreference" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ComfortItemPreferences" class="form-label">Comfort Item Preferences</label>
                            <div class="checkbox-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="ComfortItemPreferences" value="Extra Pillow" id="extraPillow">
                                    <label class="form-check-label" for="extraPillow">Extra Pillow</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="ComfortItemPreferences" value="Blanket" id="blanket">
                                    <label class="form-check-label" for="blanket">Blanket</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="ComfortItemPreferences" value="Neck Roll" id="neckRoll">
                                    <label class="form-check-label" for="neckRoll">Neck Roll</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="ComfortItemPreferences" value="Eye Mask" id="eyeMask">
                                    <label class="form-check-label" for="eyeMask">Eye Mask</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="ComfortItemPreferences" value="No Additional Items" id="noItems">
                                    <label class="form-check-label" for="noItems">No Additional Items</label>
                                </div>
                            </div>
                            <span asp-validation-for="ComfortItemPreferences" class="text-danger small"></span>
                        </div>
                    </div>
                </div>


                <!-- Submit Buttons -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5 me-3">
                        <i class="bi bi-person-plus"></i> Register Client
                    </button>
                    <a asp-action="UserAppointments" class="btn btn-outline-secondary btn-lg px-5">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Phone number formatting
        document.getElementById('ClientPhoneNumber').addEventListener('input', function(e) {
            var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
            e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
        });

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}

<style>
    .form-section {
        padding: 1.5rem;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        background-color: #fff;
    }
    
    .form-section h5 {
        color: #495057;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    
    .form-control, .form-select {
        border: 1px solid #ced4da;
        border-radius: 6px;
        padding: 0.5rem 0.75rem;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-top: 8px;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-check-input {
        margin: 0;
    }

    .form-check-label {
        margin: 0;
        font-size: 14px;
        color: #2d5016;
    }
    
    .service-info {
        border: 1px solid #dee2e6;
        background-color: #f8f9fa;
    }
    
    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    
    .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }
    
    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
    }
    
    .btn-outline-secondary:hover {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }
    
    .text-danger.small {
        font-size: 0.875rem;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .form-section {
            padding: 1rem;
        }
        
        .btn-lg {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }
        
        .text-center .btn {
            margin-bottom: 0.5rem;
        }
    }
</style>
