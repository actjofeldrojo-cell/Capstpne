@model CAPS.Models.Products

@{
    ViewData["Title"] = Model.ProductId == 0 ? "Create Product" : "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="product-form-container">
    <!-- Main Form Panel -->
    <div class="product-form-panel">
        <!-- Header Banner -->
        <div class="form-header">
            <h1 class="form-title">@(Model.ProductId == 0 ? "Add New Product" : "Edit Product")</h1>
        </div>

        <!-- Form Content -->
        <div class="form-content">
            <form asp-action="UpSert" method="post">
                @Html.HiddenFor(m => m.ProductId)
                @Html.HiddenFor(m => m.DateCreated)
                @Html.HiddenFor(m => m.DateModified)
                @Html.HiddenFor(m => m.IsActive)

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-fields">
                    <div class="form-field">
                        <input asp-for="Category" class="form-input" placeholder="Category" />
                        <span asp-validation-for="Category" class="validation-message"></span>
                    </div>

                    <div class="form-field">
                        <input asp-for="Name" class="form-input" placeholder="Product Name" />
                        <span asp-validation-for="Name" class="validation-message"></span>
                    </div>

                    <div class="form-field">
                        <input asp-for="StockQuantity" class="form-input" type="number" min="0" placeholder="Quantity" />
                        <span asp-validation-for="StockQuantity" class="validation-message"></span>
                    </div>

                    <div class="form-field">
                        <textarea asp-for="Description" class="form-input textarea" placeholder="Description "></textarea>
                        <span asp-validation-for="Description" class="validation-message"></span>
                    </div>
                </div>

                <!-- Original Action Buttons (kept as requested) -->
                <div class="original-actions">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> @(Model.ProductId == 0 ? "Create" : "Update") Product
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f0f8f0;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .product-form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 30px;
        background-color: #f0f8f0;
    }

    .product-form-panel {
        background-color: #ffffff;
        border: 1px solid #2d5016;
        border-radius: 8px;
        width: 100%;
        max-width: 500px;
        overflow: hidden;
    }

    /* Header Banner */
    .form-header {
        background-color: #2d5016;
        padding: 25px;
        text-align: center;
        border-radius: 8px 8px 0 0;
    }

    .form-title {
        font-family: Arial, sans-serif;
        font-size: 24px;
        font-weight: bold;
        color: #ffffff;
        margin: 0;
        letter-spacing: 1px;
    }

    /* Form Content */
    .form-content {
        padding: 30px;
    }

    .form-fields {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 30px;
    }

    .form-field {
        display: flex;
        flex-direction: column;
    }

    .form-input {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #2d5016;
        border-radius: 4px;
        background-color: #ffffff;
        font-size: 16px;
        color: #000000;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

        .form-input:focus {
            outline: none;
            border-color: #2d5016;
            box-shadow: 0 0 0 2px rgba(45, 80, 22, 0.2);
        }

        .form-input::placeholder {
            color: #999999;
            font-family: Arial, sans-serif;
            font-size: 14px;
        }

        .form-input.textarea {
            resize: vertical;
            min-height: 80px;
        }

    .validation-message {
        color: #dc3545;
        font-size: 14px;
        margin-top: 5px;
        font-weight: 500;
        font-family: Arial, sans-serif;
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        margin-bottom: 20px;
    }

    .save-button {
        background-color: #ffffff;
        border: 1px solid #2d5016;
        border-radius: 4px;
        padding: 10px 20px;
        color: #666666;
        font-weight: bold;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: Arial, sans-serif;
        min-width: 80px;
    }

        .save-button:hover {
            background-color: #f8f9fa;
            color: #2d5016;
        }

    .cancel-button {
        background-color: #ffffff;
        border: 1px solid #2d5016;
        border-radius: 4px;
        padding: 10px 20px;
        color: #666666;
        text-decoration: none;
        font-weight: bold;
        font-size: 14px;
        transition: all 0.3s ease;
        font-family: Arial, sans-serif;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .cancel-button:hover {
            background-color: #f8f9fa;
            color: #2d5016;
            text-decoration: none;
        }

    /* Original Actions (kept as requested) */
    .original-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        padding-top: 20px;
        border-top: 1px solid #e9ecef;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: bold;
        font-size: 14px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-family: Arial, sans-serif;
        border: none;
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
        color: #ffffff;
    }

        .btn-success:hover {
            background-color: #218838;
            color: #ffffff;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            color: #ffffff;
        }

    /* Alert Styles */
    .alert {
        border-radius: 6px;
        margin-bottom: 20px;
        padding: 15px;
        font-family: Arial, sans-serif;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .product-form-container {
            padding: 15px;
        }

        .form-content {
            padding: 20px;
        }

        .form-title {
            font-size: 20px;
        }

        .form-actions,
        .original-actions {
            flex-direction: column;
            gap: 10px;
        }

        .save-button,
        .cancel-button,
        .btn {
            justify-content: center;
            width: 100%;
        }
    }
</style>
