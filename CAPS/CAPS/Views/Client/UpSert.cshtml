@model CAPS.Models.Client

@{
    ViewBag.Title = "Register Client";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Change if you're not using a layout
}

<h2>Register Client</h2>

@using (Html.BeginForm("UpSert", "Client", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.DateRegistered)
    @Html.HiddenFor(m => m.ClientId)
    @Html.HiddenFor(m => m.IsActive)

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

@*     <div class="form-group">
        @Html.LabelFor(m => m.Age, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
        </div>
    </div>
 *@


    <div class="form-group">
        @Html.LabelFor(m => m.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Male", "Female", "Other" }), "Select Gender", new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" id="registerBtn" class="btn btn-primary">Register</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

<!-- Registration Confirmation Modal -->
<div class="modal fade" id="registrationModal" tabindex="-1" aria-labelledby="registrationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="registrationModalLabel">
                    <i class="fas fa-info-circle me-2"></i>Registration Confirmation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <i class="fas fa-calendar-check fa-3x text-primary mb-3"></i>
                    <h4 class="text-primary">Important Notice</h4>
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Please Note:</strong> After registering, you must visit our spa within the same day to choose and book your services.
                </div>
                <p class="mb-3">
                    Your registration will be completed, but to proceed with any spa services, you'll need to:
                </p>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Visit our spa location today
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Speak with our staff to select your preferred services
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Schedule your appointment time
                    </li>
                </ul>
                <div class="alert alert-info">
                    <i class="fas fa-clock me-2"></i>
                    <strong>Business Hours:</strong> Please visit during our operating hours to complete your service selection.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel Registration
                </button>
                <button type="button" class="btn btn-success" id="confirmRegistration">
                    <i class="fas fa-check me-1"></i>I Understand, Continue Registration
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Client Retention & Satisfaction Modal -->
<div class="modal fade" id="retentionModal" tabindex="-1" aria-labelledby="retentionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="retentionModalLabel">
                    <i class="fas fa-heart me-2"></i>Client Retention & Satisfaction Survey
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <i class="fas fa-star fa-3x text-warning mb-3"></i>
                    <h4 class="text-success">Welcome Back!</h4>
                    <p class="text-muted">We noticed you've registered with us before. We'd love to hear about your experience!</p>
                </div>
                
                @if (ViewBag.ExistingClient != null)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-user me-2"></i>
                        <strong>Previous Registration:</strong> We found an existing account for <strong>@ViewBag.ExistingClient.FirstName @ViewBag.ExistingClient.LastName</strong> 
                        with phone number <strong>@ViewBag.ExistingClient.PhoneNumber</strong>
                    </div>
                }
                
                <form id="retentionSurveyForm">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-star me-2"></i>How satisfied were you with our services? (1-5 stars)
                                </label>
                                <div class="rating-container text-center">
                                    <div class="star-rating">
                                        <input type="radio" id="star5" name="satisfactionRating" value="5" />
                                        <label for="star5" class="star">★</label>
                                        <input type="radio" id="star4" name="satisfactionRating" value="4" />
                                        <label for="star4" class="star">★</label>
                                        <input type="radio" id="star3" name="satisfactionRating" value="3" />
                                        <label for="star3" class="star">★</label>
                                        <input type="radio" id="star2" name="satisfactionRating" value="2" />
                                        <label for="star2" class="star">★</label>
                                        <input type="radio" id="star1" name="satisfactionRating" value="1" />
                                        <label for="star1" class="star">★</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-comment me-2"></i>What did you like most about our services?
                                </label>
                                <textarea class="form-control" id="feedback" name="feedback" rows="3" 
                                    placeholder="Please share what you enjoyed most about your previous visit..."></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lightbulb me-2"></i>How can we improve our services?
                                </label>
                                <textarea class="form-control" id="improvementSuggestions" name="improvementSuggestions" rows="3" 
                                    placeholder="Any suggestions for improvement or new services you'd like to see..."></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="alert alert-warning">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Note:</strong> Your feedback helps us provide better services and improve client retention. 
                                We value your input and will use it to enhance your spa experience.
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Skip Survey
                </button>
                <button type="button" class="btn btn-success" id="submitRetentionSurvey">
                    <i class="fas fa-check me-1"></i>Submit Feedback
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Show retention modal if this is a duplicate registration
            @if (ViewBag.ShowRetentionModal == true)
            {
                <text>
                $('#retentionModal').modal('show');
                </text>
            }
            
            // Handle register button click
            $('#registerBtn').on('click', function(e) {
                e.preventDefault();
                
                // Validate form before showing modal
                var form = $('form');
                var isValid = true;
                
                // Check required fields
                $('input[required], select[required]').each(function() {
                    if (!$(this).val()) {
                        isValid = false;
                        $(this).addClass('is-invalid');
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                if (!isValid) {
                    alert('Please fill in all required fields before registering.');
                    return;
                }
                
                // Show the modal
                $('#registrationModal').modal('show');
            });
            
            // Handle confirm registration button
            $('#confirmRegistration').on('click', function() {
                // Submit the form
                $('form').submit();
            });
            
            // Handle retention survey submission
            $('#submitRetentionSurvey').on('click', function() {
                var satisfactionRating = $('input[name="satisfactionRating"]:checked').val();
                var feedback = $('#feedback').val();
                var improvementSuggestions = $('#improvementSuggestions').val();
                
                if (!satisfactionRating) {
                    alert('Please select a satisfaction rating.');
                    return;
                }
                
                // Submit survey data
                $.ajax({
                    url: '@Url.Action("SubmitRetentionSurvey", "Client")',
                    type: 'POST',
                    data: {
                        clientId: @(ViewBag.ExistingClient?.ClientId ?? 0),
                        satisfactionRating: satisfactionRating,
                        feedback: feedback,
                        improvementSuggestions: improvementSuggestions
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            $('#retentionModal').modal('hide');
                            // Optionally redirect or show success message
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('An error occurred while submitting the survey.');
                    }
                });
            });
            
            // Handle modal close - reset form if needed
            $('#registrationModal').on('hidden.bs.modal', function() {
                // Optional: Reset form validation classes
                $('.is-invalid').removeClass('is-invalid');
            });
            
            // Handle retention modal close
            $('#retentionModal').on('hidden.bs.modal', function() {
                // Reset survey form
                $('#retentionSurveyForm')[0].reset();
                $('input[name="satisfactionRating"]').prop('checked', false);
            });
        });
    </script>
}

